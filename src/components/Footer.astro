---
const year = new Date().getFullYear();
---

<footer>
  <div class="container footer-content">
    <div class="brand">
      <zen-text variant="h4">Lukas Pabst</zen-text>
      <p class="copyright">Â© {year} All rights reserved.</p>
    </div>

    <div class="socials">
      <a href="https://github.com/lukaspabst" target="_blank" aria-label="GitHub" class="social-link">
        <zen-icon name="github" size="20px"></zen-icon>
      </a>
      <a href="https://www.xing.com/profile/Lukas_Pabst102" target="_blank" aria-label="Xing" class="social-link">
        <zen-icon name="briefcase" size="20px"></zen-icon>
      </a>
      <a href="mailto:lukas.pabst.business@outlook.de" aria-label="Email" class="social-link">
        <zen-icon name="mail" size="20px"></zen-icon>
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    background: var(--zen-bg-0);
    padding: 2rem 0;
    margin-top: 4rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    font-size: 0.875rem;
    color: var(--zen-text-2);
    margin-top: 0.25rem;
  }

  .socials {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
    color: var(--zen-text-2);
  }

  .social-link:hover {
    background: var(--zen-primary);
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 600px) {
    .footer-content {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }
  }
</style>
